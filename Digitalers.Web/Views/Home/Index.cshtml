@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1 class="display-4 my-4">Bienvenido</h1>

    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Cursos</h5>
                    <p class="card-text">Administrar información de cursos</p>
                    <a asp-controller="Curso" asp-action="Index" class="btn btn-success">Ver Cursos</a>

                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Estudiantes</h5>
                    <p class="card-text">Administrar información de estudiantes</p>
                    <a asp-controller="Estudiante" asp-action="Index" class="btn btn-success">Ver Estudiantes</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Profesores</h5>
                    <p class="card-text">Administrar información de profesores</p>
                    <a asp-controller="Profesor" asp-action="Index" class="btn btn-success">Ver Profesores</a>
                </div>
            </div>
        </div>
    </div>
</div>
