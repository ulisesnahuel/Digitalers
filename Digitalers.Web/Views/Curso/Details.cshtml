@model CursoViewModel

<div class="container mt-4">
    <h2>Detalles del Curso</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h4>@Model.Nombre</h4>
            <p><strong>Duración:</strong> @Model.Duracion horas</p>
            <p><strong>Profesor:</strong> @Model.ProfesorNombre</p>
        </div>
    </div>

    <h3>Estudiantes Inscritos</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>DNI</th>
                <th>Edad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estudiante in Model.Estudiantes)
            {
                <tr>
                    <td>@estudiante.Nombre</td>
                    <td>@estudiante.Dni</td>
                    <td>@estudiante.Edad años</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary mt-3">Volver a la Lista de Cursos</a>
</div>

