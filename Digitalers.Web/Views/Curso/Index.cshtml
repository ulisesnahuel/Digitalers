@model IEnumerable<CursoViewModel>

@{
    ViewData["Title"] = "Gestión de Cursos";
}

<div class="container">
    <h1 class="my-4">Gestión de Cursos</h1>
    <a asp-controller="Curso" asp-action="Create" class="btn btn-primary mb-3">Agregar Curso</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Duración</th>
                <th>Profesor</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var curso in Model)
                {
                    <tr>
                        <td>@curso.Nombre</td>
                        <td>@curso.Duracion hs</td>
                        <td>@curso.ProfesorNombre</td>
                        <td>
                            <a asp-controller="Curso" asp-action="Details" asp-route-id="@curso.Id" class="btn btn-info btn-sm">Ver Detalles</a>
                            <a asp-controller="Curso" asp-action="Edit" asp-route-id="@curso.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-controller="Curso" asp-action="Delete" asp-route-id="@curso.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No hay cursos disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
